
<h1>Problem Page</h1>
<h2><%= @problem.description %></h2>
<p><%= @problem.history %></p>
<ul>
  <li>Posted by <%= @problem.user.name %> on </li> <li> <%= @problem.created_at.strftime("%m/%d/%Y"" at ""%I:%M %p") %></li>
</ul>



<h2>Notes in Response</h2>

<div id="notes">
  <% render @notes %>
</div>

<% if !@notes %>
    <p>
      No notes yet.
    </p>
<% end %>




<% if user_signed_in? %>

    <%= simple_form_for [@problem, @note], remote: true  do |f| %>
        <fieldset>

          <legend>Any thoughts?</legend>

          <%= f.input :text, :label => false %>

          <%= f.button :submit, 'Add Note' %>

        </fieldset>
    <% end %>


<% else %>
    <%= link_to 'Log in to leave a note', new_user_session_path %>

<% end %>
